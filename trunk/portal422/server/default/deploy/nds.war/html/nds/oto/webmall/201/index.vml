#parse('/html/nds/oto/webmall/init.vml')
#parse('/html/nds/oto/webmall/initList.vml')
<html">
<head>
#parse("/html/nds/oto/webmall/topmeta.vml")
<title>$cate.categoryname</title>
</head>
<body>
	#parse("/html/nds/oto/webmall/lay_header.vml")
    <div class="lay_page page_cat_1">
        <div class="lay_page_wrap">
            <div>
                 <img class="ui_fluid" src="$cate.categoryphoto" alt="$cate.categoryname">
            </div>
            <div class="fn_titles">
                <h1>$cate.categoryname</h1> 
            </div>
            <div class="fn_goods qb_clearfix">
            <ul id="show_container">
			#foreach($list in $allList)
				<li>
				#if($list.get(6) == '是')
					<div class="hotpdt"></div>
				#end
					<a href="$list.get(0)">
						<img src="$list.get(2)" width="140" height="140" class="default">
						<div class="goods_name qb_fs_s mod_color_weak">$list.get(1)</div>
						<div class="price qb_fs_s mod_color_strong">
						#if($iscost =='Y')
							<span>$math.toInteger($list.get(5))积分</span>
							<del style="color: #999;text-shadow: none;">$math.toInteger($list.get(3))积分</del>
						#else
							<span>¥$list.get(5)</span>
							<del style="color: #999;text-shadow: none;">¥$list.get(3)</del>
						#end
						</div>
					</a>
				</li>
			#end
			</ul>
    </div> 
	#parse("/html/nds/oto/webmall/footer.vml")
	</div>
</div>
</body></html>