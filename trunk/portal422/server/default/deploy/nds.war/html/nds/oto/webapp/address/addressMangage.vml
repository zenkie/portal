#parse("/html/nds/oto/webmall/init.vml")
#parse('/html/nds/oto/webapp/address/manageInit.vml')
<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=UTF-8">    
<meta charset="UTF-8">
<meta name="viewport" content=" initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
<meta name="apple-mobile-web-app-capable" content="yes">
<meta name="apple-mobile-web-app-status-bar-style" content="black">
<meta name="format-detection" content="telephone=no">
<script type="text/javascript" src="/html/nds/oto/webapp/address/js/jquery.js"></script>
<script type="text/javascript" src="/html/nds/oto/webapp/address/js/deleteAddress.js"></script>
<script type="text/javascript" src="/html/nds/oto/webapp/address/js/selectAddress.js"></script>
<link href="/html/nds/oto/webmall/css/style.css" rel="stylesheet">
<title>收货地址管理</title>
</head>
<body>
#if($mall.showmenu == '否')
	#parse("/html/nds/oto/webmall/lay_header.vml")
#end
    <div class="lay_page page_address_manage current" id="page_address_manage">
        <div class="lay_page_wrap">
            <div class="qb_flex ui_gap ui_mt15">
                <a href="./addAddress.vml" class="mod_btn btn_block btn_em flex_box" id="add">新增收货地址</a>
            </div>
			<div id="addressList">
			#foreach($address in $addressList)			
            <div class="qb_gap fn_address">
			<div class="mod_celltitle qb_fs_s ui_plr10">
                <h3 class="qb_fl">
					#if ($!address.get(8) == "是") 
					<i price="100" class="qb_icon icon_checkbox icon_checkbox_checked" name="cart_checkbox"></i>
					#else
					<i price="100" class="qb_icon icon_checkbox" name="cart_checkbox"></i>
					#end
				</h3>
            </div>
                <div class="qb_mb10 qb_none" id="tips"></div>
                <ul class="list_address">                    
                            <li class="qb_mb20">
                            <div class="address" id="address_$address.get(0)">
                                    <span class="qb_mr10">$address.get(6)</span>( $address.get(7))
						    <div>$address.get(1)</div>
                            </div>
                                <div class="qb_flex qb_tac">
                                    <a href="./editAddress.vml?editId=$address.get(0)" class="flex_box mod_color_weak"><i class="qb_icon icon_pen"></i>修改</a>
                                    <a class="delete flex_box mod_color_weak" onclick="delAddress($address.get(0))"><i class="qb_icon icon_trash"></i>删除</a>
                                </div>
                            </li>                       
                </ul>
            </div>
			#end
			</div>
            <div class="qb_gap mod_color_comment qb_tac qb_none" id="no-address">您还没有收货地址，赶快去“新增收货地址”吧！</div>
        </div>
    </div>
    <div class="mod_dialog qb_none" id="message-notice">
        <div class="dialog_mask"></div>
        <div class="dialog_main qb_br qb_tac">
            <div class="dialog_bd" id="notice-content"></div>
            <div class="dialog_ft qb_flex"><a href="javascript:void(0);" class="flex_box" id="notice-cancel">取消</a><a href="javascript:void(0);" class="flex_box" id="notice-sure">确定</a></div>
        </div>
    </div>    
#parse("/html/nds/oto/webmall/footer.vml")
#if($mall.showmenu == '是')
	#parse("/html/nds/oto/webmall/bottom_menu.vml")
#end
</body></html>